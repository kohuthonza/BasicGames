<UserControl x:Class="BasicGames.UserControls.GamerUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:BasicGames.UserControls"
             mc:Ignorable="d" 
             DataContext="{DynamicResource GamersViewModel}"
             d:DesignHeight="720" d:DesignWidth="920">
    <Grid Background="White">
        <Grid Margin="350 220">
            <Grid.RowDefinitions>
                <RowDefinition  Height="*"/>
                <RowDefinition  Height="*"/>
                <RowDefinition  Height="*"/>
            </Grid.RowDefinitions>
            <Button Grid.Row="0" Name="snakeButton" Command="{Binding GamerViewModel.StartSnakeGameCommand}" Content="Snake" FontSize="25" Margin="10" Click="snakeButton_Click">

            </Button>
        </Grid>
        <local:SnakeUserControl x:Name="SnakeUserControl" Visibility="Hidden" />
    </Grid>
</UserControl>
