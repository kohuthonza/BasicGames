<Window x:Class="BasicGames.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:userControls="clr-namespace:BasicGames.UserControls"
        xmlns:local="clr-namespace:BasicGames"
        mc:Ignorable="d"
        Title="Basic Games" Height="720" Width="920">
    <Grid>
        <Grid Margin="350 220">
            <Grid.RowDefinitions>
                <RowDefinition  Height="*"/>
                <RowDefinition  Height="*"/>
                <RowDefinition  Height="*"/>
            </Grid.RowDefinitions>
            <Button Grid.Row="0" Name="snakeButton" Content="Snake" FontSize="25" Margin="10" Click="snakeButton_Click">

            </Button>
        </Grid>
        <userControls:SnakeUserControl x:Name="SnakeUserControl" Visibility="Hidden" />
    </Grid>
</Window>
